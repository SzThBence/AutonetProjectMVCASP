@model AutonetProjectMVCASP.Models.Appointments

@{
    ViewData["Title"] = "Remove";
}


<div class="container d-flex justify-content-center align-items-center">
    <div class="row justify-content-center align-content-center"
    <h1>Remove</h1>
    <div class="card bg-dark text-white">
        <div class="card-body">

        
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <hr />
            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Time)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Time)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Location)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Location)
                    </dd>
                    <dt class="col-sm-2">
                                Employee Assigned
                    </dt>
                    <dd class="col-sm-10 align-items-center">
                                @ViewBag.locationEmployee
                    </dd>
                </dl>
            </div>
            <hr/>
            <form asp-action="Remove" class="align-content-center">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId"/>
                <input type="hidden" asp-for="Location" />
                <input type="hidden" asp-for="Name" />
                <input type="hidden" asp-for="Time" />
                <input type="hidden" asp-for="EmployeeId" />
                <input type="hidden" asp-for="JobId" />
                
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a class="btn btn-secondary" href='javascript:history.go(-1)'>Go Back</a>
            </form>
        </div>
        </div>
        </div>
    </div>
</div>
