@model AutonetProjectMVCASP.Models.Locations

@{
    ViewData["Title"] = "Remove";
}

<style>
    .card {
        margin-bottom: 25px;
        margin-left: 10px;
        margin-right: 10px;
        padding: 10px;
        color: white;
        border-radius: 25px;
        box-sizing: border-box;
        overflow: hidden;
        border: 3px solid white;
        /*    min-height: 320px;*/


        box-shadow: 8px 8px 0px rgb(128, 128, 128) !important;
        transition: 0.5s;
    }

        .card:hover {
            box-shadow: 8px 8px 0px rgb(175, 175, 175) !important;
        }
</style>

<div class="container d-flex justify-content-center align-items-center">
    <div class="card bg-dark text-white">
        <div class="card-body">
            <div class="row">

                <h1>Remove</h1>

                <h3>Are you sure you want to delete this location?</h3>
                <div>
                    <hr />
                    <dl class="row">
                        <dt class = "col-sm-2">
                            @Html.DisplayNameFor(model => model.Address)
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.Address)
                        </dd>
                        <dt class = "col-sm-2">
                            Start Time
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.StartTime)
                        </dd>
                        <dt class = "col-sm-2">
                            End Time
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.EndTime)
                        </dd>
                        <dt class = "col-sm-2">
                            Description
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.Title)
                        </dd>
                    </dl>
    
                    <form asp-action="Remove">
                        <input type="hidden" asp-for="Place" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                    </form>
            </div>
            </div>
        </div>  
    </div>
</div>