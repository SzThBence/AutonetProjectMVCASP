@model AutonetProjectMVCASP.Models.Employees

@{
    ViewData["Title"] = "Edit";
    string emp = "employee1";
}

<div class="container d-flex flex-column justify-content-center align-items-center">
    <div class="card bg-dark text-white " style="width:max-content;min-width:40%">
        <div class="card-header" style="display: flex; justify-content: center; align-items: center;">
            <div class="row justify-content-center align-items-center">
                <h1>Employees</h1>
                
            </div>
            
        </div>
        <hr />
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-10">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Surname" class="control-label"></label>
                            <input asp-for="Surname" class="form-control" />
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Job" class="control-label"></label>
                            <input asp-for="Job" class="form-control" />
                            <span asp-validation-for="Job" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImagePath" class="control-label"></label><br />
                            <input asp-for="ImagePath" type="file" name="imageFile" class="form-control-file" />
                            <span asp-validation-for="ImagePath" class="text-danger"></span>
                        </div>
                        <div class="form-group pt-2 text-center">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <hr/>
        <div class="card-footer text-center">
            <div class="row justify-content-center align-items-center pb-2 pt-0">
                <div class="col-10">
                    <a class="btn btn-secondary" href='javascript:history.go(-1)'>Go Back</a>
                </div>
            
            </div>
        </div>
    </div>
</div>


