@model AutonetProjectMVCASP.Models.Employees

@{
    ViewData["Title"] = "Remove";
}

<div class="container d-flex justify-content-center align-items-center">
    <div class="row justify-content-center align-content-center">
        <div class="card bg-dark text-white">
            <div class="card-body">
                <h3>Are you sure you want to delete this person?</h3>
                <div>
                    <hr />
                    <dl class="row">
                        <dt class = "col-sm-3">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class = "col-sm-9">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class = "col-sm-3">
                            @Html.DisplayNameFor(model => model.Surname)
                        </dt>
                        <dd class = "col-sm-9">
                            @Html.DisplayFor(model => model.Surname)
                        </dd>
                        <dt class = "col-sm-3">
                            @Html.DisplayNameFor(model => model.Job)
                        </dt>
                        <dd class = "col-sm-9">
                            @Html.DisplayFor(model => model.Job)
                        </dd>
                    </dl>
                    <hr/>
                    <form asp-action="Remove">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a class="btn btn-secondary" href='javascript:history.go(-1)'>Go Back to Previous Page</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>