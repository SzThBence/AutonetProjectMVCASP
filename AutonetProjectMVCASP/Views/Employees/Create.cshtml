@model AutonetProjectMVCASP.Models.Employees

@{
    ViewData["Title"] = "Create";
}

<div class="container d-flex justify-content-center align-items-center">
    <div class="card bg-dark text-white">
        <div class="card-body">
            <h4>Employees</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname" class="control-label"></label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Job" class="control-label"></label>
                    <input asp-for="Job" class="form-control" />
                    <span asp-validation-for="Job" class="text-danger"></span>
                </div>
                <hr/>
                <div class="form-group">
                    <div>

                    <input type="submit" value="Create" class="btn btn-primary" /> |
                        <a class="btn btn-secondary" href='javascript:history.go(-1)'>Go Back to Previous Page</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


